{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "kubernetes": { "fileMatch": ["\\.yaml$"] },
  "schedule": ["at any time"],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "reviewers": ["1Solon"],
  "packageRules": [
    {
      "description": "YMA dating scheme",
      "packagePatterns": ["^ghcr\\.io/linuxserver/jellyfin$"],
      "allowedVersions": "<2000"
    },
    {
      "description": "YMA dating scheme",
      "packagePatterns": ["^ghcr\\.io/linuxserver/qbittorrent$"],
      "allowedVersions": "<6"
    }
  ],
  "regexManagers": [
    {
      "datasourceTemplate": "github-releases",
      "fileMatch": [
        "home-cluster/.*\\.yaml"
      ],
      "matchStrings": [
        " +targetRevision: +(?<currentValue>[^'\" ]+) +# renovate: depName=(?<depName>[^ \\n]+) +(extractVersion=(?<extractVersion>[^\\n]+))?"
      ]
    }
  ]
}
