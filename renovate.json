{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "kubernetes": {
    "fileMatch": ["\\.yaml$", "\\.yml$"]
  },
  "schedule": ["at any time"],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "reviewers": ["1Solon"],
  "packageRules": [
    {
      "description": "Docker images usually have miserable naming schemes",
      "matchDatasources": ["docker"],
      "versioning": "docker"
    },
    {
      "description": "Postgres major updates are disabled, mainly because Starr apps ONLY support 14 :<",
      "packageNames": ["postgres"],
      "updateTypes": ["major"],
      "enabled": false
    },
    {
      "description": "YMA dating scheme",
      "packagePatterns": ["^ghcr\\.io/linuxserver/jellyfin$"],
      "allowedVersions": "<2000"
    },
    {
      "description": "YMA dating scheme",
      "packagePatterns": ["^ghcr\\.io/linuxserver/qbittorrent$"],
      "allowedVersions": "<6"
    },
    {
      "description": "Handle Helm releases",
      "matchManagers": ["helmv3", "helmfile"],
      "matchDatasources": ["helm"],
      "enabled": true,
      "packageRules": [
        {
          "description": "HelmRelease specific format",
          "packagePatterns": ["helmRelease"],
          "allowedVersions": "^v1\\.6\\.1$"
        }
      ]
    }
  ]
}
